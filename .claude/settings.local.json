{
  "permissions": {
    "allow": [
      "Bash(bash .claude/scripts/test-and-log.sh:*)",
      "Bash(.claude/scripts/test-and-log.sh:*)",
      "Bash(bash .claude/scripts/pm/*)",
      "Bash(.claude/scripts/pm/*)",
      "Bash(cat:*)",
      "Bash(fi)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "List(**)",
      "WebFetch(domain:github.com)",
      "WebSearch"
    ]
  },
  "hooks": {
    "pre-tool-use": {
      "Bash": {
        "enabled": true,
        "script": ".claude/hooks/bash-worktree-fix.sh",
        "description": "Automatically prepends worktree path to Bash commands when in a worktree",
        "apply_to_subagents": true
      }
    }
  }
}